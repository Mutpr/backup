package src_20190802;

import java.util.*;
public class prac0802_5 {
	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		
		boolean run = true;
		int balance = 0;
		int choice;
		int draw;
		
		while(run) {
			System.out.println("ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
			System.out.println("1. 예금 : 2. 출금 : 3. 잔고 : 4. 종료");
			System.out.println("ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
			System.out.print("선택>");
			
			choice = sc.nextInt();
			
			if(choice == 1) {
				draw = sc.nextInt();
				System.out.println("예금액>"+draw);
				break;
			}
			if(choice == 2) {
				draw = sc.nextInt();
				System.out.println("출금액>"+draw);
				break;
			}
			if(choice == 3) {
				draw = sc.nextInt();
				System.out.println("잔고>"+draw);
				break;
			}
			if(choice == 4) {
				draw = sc.nextInt();
				System.out.println("프로그램 종료");
				break;
			}
			
		}
	}

}

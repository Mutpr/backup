package src_20190802;

import java.util.*;
public class prac0802_5 {
	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		
		boolean run = true;
		int balance = 0;
		int choice;
		int draw1;
		int withdraw;
		int remitt=0;
		
		while(run) {
			System.out.println("ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
			System.out.println("1. 예금 : 2. 출금 : 3. 잔고 : 4. 종료");
			System.out.println("ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ");
			System.out.print("선택>");
			
			choice = sc.nextInt();
			
			
			if(choice == 1) {
				System.out.print("예금액>");
				draw1 = sc.nextInt();
				System.out.print(draw1);
				break;
			}
			if(choice == 2) {
				System.out.print("출금액>");
				withdraw = sc.nextInt();
				remitt += draw1-withdraw;
				System.out.print(remitt);
				break;
			}
			if(choice == 3) {
				System.out.print("잔고>");
				System.out.print(draw1-withdraw);
				break;
			}
			if(choice == 4) {
				draw1 = sc.nextInt();
				System.out.print("프로그램 종료");
				break;
			}
			
		}
	}

}

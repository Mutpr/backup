<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.basketMapper">
    <select id = "selectAll" resultType="basketDTO" parameterType="int">
        select * from basket where userId = #{userId};
    </select>
    <insert id="insert" parameterType="basketDTO">
        insert into basket(basketTime, userId, count, productId, totalPrice) value (#{basketTime}, #{userId}, #{count}, #{productId}, #{totalPrice})
    </insert>
    <delete id="delete" parameterType="int">
        delete from basket where basketId = #{basketId}
    </delete>
</mapper>
package src_0516;

import java.util.*;
public class src5 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		boolean [] seat = new boolean[10];
		int menu;
		int seatSel;
		int i;
		
		
		while(true) {
		System.out.println("메뉴를 선택하세요:");
		System.out.println("1) 대여 2) 대여현황 3) 종료");
		menu = scan.nextInt();
		
		switch(menu) {
		case 1:
			
			for(i = 0; i<=seat.length; i++) {
				System.out.println("대여하고자 하는 사물함 번호를 입력하세요");
				seatSel = scan.nextInt();
				seat[i] = true;
				break;
			}
		case 2:
			for(i = 0; i<=seat.length; i++) {
				if(seat[i] = true) {
				System.out.print("\t"+"true");
			}else {
				System.out.print("\t"+"false");
			}
			}
			
			
		case 3:
		}
		
		}
		
	}

}

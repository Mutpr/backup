package src_0508;

import java.util.*;

public class src1 {
	public static void main(String args[]) {
		Scanner scan = new Scanner(System.in);
		
		int max = 1; 
		int value; 
		int [] array1 = new int[9];
		int index = -1;
		int i;
		
		for(i =1; i<=array1.length-1; i++) {
			array1[i] = scan.nextInt();
			value = array1[i];
			System.out.println();
			
			if(max<value) {
				max = value;
			}
		}System.out.println(max);
		
		if(max==array1[i]) {
			index = i;
			System.out.println(index);
		}
		
		
	}

}

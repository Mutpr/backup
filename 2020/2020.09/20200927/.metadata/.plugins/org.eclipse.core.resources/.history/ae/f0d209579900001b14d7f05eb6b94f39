package src0_20200927;

class HourEmployee extends Person{
	private int income;
	private int workHour;
	
	@Override
	public int computeSalary() { //임금 계산
		//시간당 임금 * 일한 시간 반환
		income = income*workHour;
		return income;
	}
	
	public HourEmployee(String name, String Emp, int income, int workHour) {
		super(name, Emp);
		// TODO Auto-generated constructor stub
		this.income = income;
		this.workHour = workHour; 
	}
	
	@Override
	public String toString() {
		return "이름> "+name+"\t"
				+"사번> "+EmpNumber+"\t"
				+"일한 시간> "+workHour+"\t"
				+"시간당 임금> "+income+"\t";
	}
}

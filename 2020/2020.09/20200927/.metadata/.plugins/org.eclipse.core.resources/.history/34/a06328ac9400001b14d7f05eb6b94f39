package src0_20200927;

public class SalariedEmployee extends Person{
	private int hourIncome; 
	
	public int computeSalary(int hourIncome) { //임금 계산
		//시간당 임금 * 일한 시간 반환
		hourIncome = hourIncome*12;
		return hourIncome;
	}
	
	public SalariedEmployee(String name, String Emp, int hourIncome) {
		super(name, Emp);
		this.hourIncome = hourIncome;
	}
	
	@Override
	public String toString() {
		return "이름> "+getName()+"\t"
				+"사번> "+getEmpNumber()+"\t"
				+"시간당 임금> "+hourIncome+"\t";
	}
	
	}


	public static void main(String[] args) {
		Operation oper = null;
		oper = new Hair("긴 머리");
		run(oper);
		oper = new Fruit("사과");
		run(oper);
		Operation operation = new Operation() {
			
			public void cut() {
				System.out.println("를 자르다");
			}

			public void wash() {
				System.out.println("를 씻다");
			}
		};
		
		
		
	}


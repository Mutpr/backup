package src3_20201012;

public class Answer_03 {

	public static void main(String[] args) {
		Operation operation = new Operation() {

			public void cut() {
				System.out.println();
			}

			public void wash() {
				System.out.println();
			}
			
			public void tint(String color) {
				System.out.println(color + "색으로 염색하다");
			}
			
			public void pack(int cnt) {
				System.out.println(cnt+"개 포장하다");
			}
		};
		
		Operation oper = null;
		oper = new Hair("긴 머리");
		run(oper);
		oper = new Fruit("사과");
		run(oper);
		
	}

	private static void run(Operation oper) {
		System.out.printnln();
	}
	}
